///The ternary (conditional) operator in C

{
    int a=25,b=20;
    int c ;
    ///(/* logical expression*/) ? (/* if true */) : (/*if false*/);
    c = (a > b) ? b : a ;
    printf("ans = %d\n",c);
}

printf("\n");

//switch statments

{
    int marks=95;

    switch (marks)
    {
    case 95:
    case 90:
        printf("Excellent\n");
        break;
    case 75:
        printf("Good\n");
        break;
    case 60:
        printf("Satisfactory\n");
        break;
    case 40:
        printf("Poor\n");
        break;
    default:
        printf("Grade unavailable\n");
    }
}

printf("\n");

//While loop

{
    int i=0;

    while (i <= 10)
    {
        printf("Value of i = %d\n",i);
        //i=i+1;
        i++;
    }

}

printf("\n");

//do...while loop in C

{
    int i=0;

    do
    {
       printf("Value of i = %d\n",i);
       i++;
    } while (i <= 10);

printf("\n");

    while i<=10);
    {
        printf("Value of i = %d\n",i);
        i++;
    }
}


    return 0;
}
